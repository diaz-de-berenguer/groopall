<div id="groops-edit">
	<div class="col-md-8 col-md-offset-2">
		<div class="container-fluid">
			<!-- Back -->
			<%= link_to "/#groop-#{@groop.id}", class: "pull-right" do %>
				<i class="fa fa-chevron-left" aria-hidden="true"></i>
			<% end %>
			<h4 class="title">
				Edit Groop
			</h4>
			<%= render 'form', groop: @groop %>

			<hr>

			<div class="center" style="padding-top:1em">
				<%= link_to groop_path(@groop), class: "remove-color", method: :delete,
				    data: { confirm: "Are you sure you want to delete this groop?" } do %>
					<small>Delete?</small>
				<% end %>
			</div>
		</div>
	</div>
</div><!-- #groops-index -->
