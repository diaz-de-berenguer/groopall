<div id="groops-show">
	<div class="col-md-8 col-md-offset-2">
		<div class="container-fluid">
			<!-- Back -->
<!-- 			<div class="row">
				<div class="col-xs-12">
					<%= link_to "/#groop-#{@groop.id}", class: "pull-right" do %>
						<i class="fa fa-chevron-left" aria-hidden="true"></i>
					<% end %>
				</div>
			</div>
 -->
			<!-- Title -->
			<div class="row" style="margin-top:1em">
				<div class="container-fluid">
					<div class="row">
						<div class="col-xs-10">
							<div class="grey-color">
								<%= @groop.nickname %>
							</div>
						</div>
						<div class="col-xs-2">
							<%= link_to "/#groop-#{@groop.id}", class: "pull-right" do %>
								<i class="fa fa-chevron-left" aria-hidden="true"></i>
							<% end %>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-8">
							<small><%= @groop.friends.map(&:name).to_sentence %></small>
						</div>
					</div>
				</div>
			</div>
			<hr>

			<% @groop.interactions.order('date DESC').each do |int| %>
				<div class="row">
					<div class="col-xs-2 center">
						<%= int.to_icon.html_safe %>
					</div>
					<div class="col-xs-8">
						<%= int.date.strftime("%A, %b/%d/%Y") %>
					</div>
					<div class="col-xs-2">
						<%= link_to groop_interaction_path(@groop, int), class: 'pull-right remove-color', method: :delete, data:
						    { confirm: "Are you sure you want to delete this interaction?" } do %>
							<small><i class="fa fa-trash-o" aria-hidden="true"></i></small>
						<% end %>
					</div>
				</div>
				<hr>
			<% end %>

		</div>
	</div>
</div><!-- #groops-index -->
